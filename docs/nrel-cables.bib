  url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1365-2664.2005.01060.x/abstract},
  journal = {Journal of Applied Ecology},
  author = {Gill, Andrew B.},
  month = aug,
  year = {2005},
  keywords = {coastal ecology,coastal environmental impact,enhancement,habitat disturbance,resilience,stability},
  pages = {605--615},
  file = {Full Text PDF:/Users/bbest/zotero/storage/9UXI93UU/Gill - 2005 - Offshore renewable energy ecological implications.pdf:application/pdf;Snapshot:/Users/bbest/zotero/storage/BKRTWA6V/abstract.html:text/html},
