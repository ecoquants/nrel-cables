  month = mar,
  year = {2015},
  keywords = {Beach morphology,Erosion,Nearshore impact,Sediment transport,Wave energy,Wave farm},
  pages = {572--582},
  file = {Abanades et al - 2015 - Coastal defence using wave farms.pdf:/Users/bbest/zotero/storage/8WPH8FC8/Abanades et al - 2015 - Coastal defence using wave farms.pdf:application/pdf;ScienceDirect Snapshot:/Users/bbest/zotero/storage/JMR6HDD9/S0960148114006752.html:text/html},
