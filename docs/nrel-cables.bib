  month = dec,
  year = {2009},
  keywords = {artificial reefs,environmental impact,fish aggregation devices,marine-protected areas,wave power,wind farm,wind power},
  pages = {1145--1153},
  file = {Inger et al - 2009 - Marine renewable energy.pdf:/Users/bbest/zotero/storage/H5VPSH47/Inger et al - 2009 - Marine renewable energy.pdf:application/pdf;Snapshot:/Users/bbest/zotero/storage/3D2NRQEM/abstract.html:text/html},
